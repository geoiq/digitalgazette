= banner_and_header_for(@page_type)
%br
- unless @page_type
  - panel :main_list do
    = dynamic_widgets @preferred, {:panel => "main_list", :pagination => :all}
    %div.main_list_pagination
    = pagination_links_for_widgets({:page_links => false})
- else
  = widget_for @page_type, :autoload => true, :per_page => 10



- content_for :right_sidebar do
  = link_to(image_tag("add_data_blue.png", :plugin => "digitalgazette", :width => 225, :height => 48, :alt => "Add Data"), "/pages/new",  :style => "display: block; text-align: center; margin-left: -10px", :id => "givenow")
  = box_for(:most_viewed,{:page_types => @page_types, :limit => limit_for_box_widget(@page_types), :panel => "most_viewed", :load => false})
  = box_for(:recent, {:page_types => @page_types, :limit => limit_for_box_widget(@page_types), :panel => "recent", :load => false})
